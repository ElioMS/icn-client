<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".features.create_account.Form1Fragment">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_create_account"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:theme="@style/CustomToolbar"
                app:navigationIcon="@drawable/ic_navigation_back">
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tb_create_account">

            <LinearLayout
                    android:id="@+id/llMain"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">

                <EditText
                        android:id="@+id/et_name"
                        style="@style/TextField.Rounded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Nombres"
                        android:layout_marginBottom="10dp"/>

                <EditText
                        android:id="@+id/et_surname"
                        style="@style/TextField.Rounded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Apellidos"
                        android:layout_marginBottom="10dp"/>

                <RadioGroup
                        android:id="@+id/radio"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/button2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GÃ©nero"
                            android:textSize="20sp"
                            android:layout_gravity="left"
                    />

                    <RadioButton
                            android:id="@+id/radioButton2"
                            android:text="M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <RadioButton
                            android:id="@+id/radioButton"
                            android:text="F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RadioGroup>

                <EditText
                        android:id="@+id/et_age"
                        style="@style/TextField.Rounded"
                        android:hint="Edad"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/et_email"
                        style="@style/TextField.Rounded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Correo"
                        android:layout_marginBottom="10dp"/>

                <Button
                        android:id="@+id/btnNext"
                        style="@style/Button.Rounded.Primary"
                        android:text="Siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="20dp"/>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>