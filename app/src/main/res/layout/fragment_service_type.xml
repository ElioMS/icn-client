<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable name="viewModel"
                  type="com.peruapps.icnclient.features.services.viewmodel.ServiceViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/services_navigation_toolbar"/>

        <ScrollView
                android:id="@+id/sv_container"
                android:layout_below="@+id/toolbar"
                android:layout_above="@id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".features.services.views.fragments.ServiceTypeFragment">

                <TextView
                        style="@style/ServicesListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.service.name}"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/textView15" android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_item_service_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="3"
                        tools:listitem="@layout/rv_item_service_type"
                        app:serviceTypesAdapter="@{viewModel.adapter}"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

                <include
                        android:id="@+id/has_material"
                        layout="@layout/include_rg_material_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rv_item_service_type"
                        app:viewModel="@{viewModel}"/>

                <include
                        android:id="@+id/do_schedule"
                        layout="@layout/include_rg_schedule_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:viewModel="@{viewModel}"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/has_material"/>

                <include
                        android:visibility="@{ viewModel.hasMaterial ? (viewModel.showTimePicker ? View.VISIBLE : View.GONE) : View.GONE }"
                        android:id="@+id/sp_timepicker"
                        layout="@layout/include_sp_timepicker_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:viewModel="@{viewModel}"
                        app:layout_constraintTop_toBottomOf="@+id/do_schedule" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                <com.peruapps.icnclient.widgets.CustomCalendarView
                        android:id="@+id/calendar"
                        android:visibility="@{ viewModel.service.id == 2 ? (viewModel.doSchedule ? View.VISIBLE : View.GONE) : View.GONE }"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/do_schedule">

                </com.peruapps.icnclient.widgets.CustomCalendarView>

                <include
                        layout="@layout/include_substances_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/has_material"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:viewModel="@{viewModel}"/>

                <include
                        layout="@layout/schedule_services_spinner"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/calendar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:viewModel="@{viewModel}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <LinearLayout
                android:id="@+id/btn_next"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="60dp"
                android:background="@{ viewModel.doSchedule ? @color/colorLightGray : @color/colorPrimary }"
                android:onClick="@{ () -> viewModel.nextButtonEvents() }">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"
                    android:text="@{ viewModel.doSchedule ? @string/button_next : @string/button_confirm }"/>
        </LinearLayout>

    </RelativeLayout>
</layout>