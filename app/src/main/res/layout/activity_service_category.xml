<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.service_category.views.ServiceCategoryActivity"
        android:background="@color/colorPrimary">

    <FrameLayout
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_navigation_back"/>
    </FrameLayout>

    <TextView
            android:textSize="35sp"
            android:textColor="@color/colorWhite"
            android:layout_width="224dp"
            android:layout_height="120dp"
            android:text="Solicita tu servicio"
            android:gravity="center" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="91dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="91dp" android:id="@+id/textView5"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/ic_first_category" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"/>

    <TextView
            android:text="Procedimientos de enfermería"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_item"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/textView8"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/ic_second_category" app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="50dp" />

    <TextView
            android:text="Personal de enfermería o Técnico de enfermería"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>