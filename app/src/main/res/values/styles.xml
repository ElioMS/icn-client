<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/pro_display_regular</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/pro_display_regular</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="Button.Rounded.Accent" parent="Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Rounded.Primary" parent="Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Rounded.Gray" parent="Button">
        <item name="backgroundTint">@color/colorLightGray</item>
        <item name="colorButtonNormal">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!-- Edit Texts -->
    <style name="TextField">
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextField.Rounded" parent="TextField">
        <item name="android:background">@drawable/et_rounded_style</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Toolbars-->
    <style name="CustomToolbar" parent="android:Theme.Material">
        <item name="android:background">@drawable/tb_create_account</item>
    </style>

    <!-- Texts styles -->
    <style name="BaseText">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AccentText" parent="BaseText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryText" parent="BaseText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
