<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/muli_extralight</item>
        <item name="android:screenOrientation">portrait</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!--<item name="android:windowDisablePreview">true</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>


    <style name="Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">60dp</item>
    </style>

    <style name="Button.Rounded.Accent" parent="Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">70dp</item>
        <!--<item name="android:stateListAnimator">@null</item>-->
    </style>

    <style name="Button.Rounded.Primary" parent="Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Rounded.Gray" parent="Button">
        <item name="backgroundTint">@color/colorItem</item>
        <item name="colorButtonNormal">@color/colorItem</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:height">70dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!-- Edit Texts -->
    <style name="TextField">
        <item name="android:padding">15dp</item>
    </style>

    <style name="TextField.Rounded" parent="TextField">
        <item name="android:background">@drawable/et_rounded_style</item>
        <!--<item name="android:padding">20dp</item>-->
        <!--<item name="android:elevation">5dp</item>-->
    </style>

    <style name="TextField.Rounded.Gray" parent="TextField">
        <item name="android:background">@drawable/et_gray_rounded_style</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Toolbars-->
    <style name="CustomToolbar" parent="android:Theme.Material">
        <item name="android:background">@drawable/tb_create_account</item>
    </style>

    <style name="ServicesCustomToolbar" parent="android:Theme.Material">
        <item name="android:background">@drawable/tb_create_account</item>
    </style>

    <!-- Texts styles -->
    <style name="BaseText">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AccentText" parent="BaseText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryText" parent="BaseText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ServicesListTitle" parent="AccentText">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Dialog -->
    <style name="FullScreenDialogStyle" parent="android:Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="FullScreenDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>

        <!--&lt;!&ndash; Additionally if you want animations when dialog opening &ndash;&gt;-->
        <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <!---->

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/colorItem</item>
    </style>

</resources>
